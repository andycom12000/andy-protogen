{
  "expressions": {
    "default": {
      "type": "static",
      "file": "base/default.png",
      "idle_animation": "blink"
    },
    "happy": {
      "type": "static",
      "file": "base/happy.png",
      "idle_animation": "blink"
    },
    "angry": {
      "type": "static",
      "file": "base/angry.png"
    },
    "crying": {
      "type": "static",
      "file": "base/crying.png"
    },
    "shocked": {
      "type": "static",
      "file": "base/shocked.png"
    },
    "helpless": {
      "type": "static",
      "file": "base/helpless.png"
    },
    "very_angry": {
      "type": "static",
      "file": "base/very_angry.png"
    },
    "bsod": {
      "type": "static",
      "file": "base/bsod.png"
    },
    "blink": {
      "type": "animation",
      "frames_dir": "animations/blink",
      "fps": 15,
      "loop": false
    },
    "loading_spinner": {
      "type": "animation",
      "frames_dir": "animations/loading_spinner",
      "fps": 10,
      "loop": true
    },
    "loading_bar": {
      "type": "animation",
      "frames_dir": "animations/loading_bar",
      "fps": 6,
      "loop": true
    }
  },
  "effects": {
    "matrix_rain": {
      "generator": "matrix_rain",
      "fps": 20,
      "params": { "color": [0, 255, 70], "speed": 1.0, "density": 0.3 }
    },
    "starfield": {
      "generator": "starfield",
      "fps": 20,
      "params": { "star_count": 50, "speed": 1.0, "color": [0, 255, 255] }
    },
    "plasma": {
      "generator": "plasma",
      "fps": 20,
      "params": { "speed": 1.0, "palette": "cyan" }
    },
    "scrolling_text": {
      "generator": "scrolling_text",
      "fps": 30,
      "params": { "text": "PROTOGEN", "speed": 50.0, "color": [0, 255, 255] }
    },
    "rainbow_sweep": {
      "generator": "rainbow_sweep",
      "fps": 25,
      "params": { "speed": 1.0 }
    },
    "breathe": {
      "generator": "breathe",
      "fps": 20,
      "params": { "period": 3.0, "amplitude": 0.5 }
    },
    "glitch": {
      "generator": "glitch",
      "fps": 30,
      "params": { "intensity": 0.3 }
    },
    "color_shift": {
      "generator": "color_shift",
      "fps": 20,
      "params": { "speed": 1.0 }
    }
  },
  "default": "default"
}
